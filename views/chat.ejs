<div class="col-lg-6 offset-lg-3">
  <h3 class="mb-3"><%= chatConfig.nickname %> - <%= chatConfig.roomLabel %></h3>
  <div class="d-flex gap-3 mb-3">
    <div class="col-md-8 chatBox">
      <h6>Üzenetek</h6>
      <ul id="messages" class="msgList"></ul>
    </div>
    <div class="col-md-4 usersListBox">
      <h6>Felhasználók</h6>
    </div>
  </div>
  <div class="d-flex gap-3 mb-3">
    <div class="col-md-8">
      <div class="d-flex gap-3 justify-content-between">
        <div class="form-floating w-full">
          <input
            type="text"
            class="form-control"
            id="newMessage"
            placeholder="name@example.com"
          />
          <label for="newMessage">Új üzenet</label>
        </div>
        <button class="btn btn-primary">Küldés</button>
      </div>
    </div>
    <div class="col-md-4">
      <button id="leaveRoom" class="btn btn-danger w-full p-3">
        Kilépés a csevegésből
      </button>
    </div>
  </div>
</div>
